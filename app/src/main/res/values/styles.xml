<resources>

    <style name="VkCupTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/vkPrimary</item>
        <item name="colorPrimaryDark">@color/vkPrimary</item>
        <item name="colorAccent">@color/vkPrimary</item>
        <item name="buttonStyle">@style/VkCupTheme.Button</item>
        <item name="editTextStyle">@style/VkCupTheme.EditText</item>
    </style>

    <style name="VkCupTheme.Final" parent="VkCupTheme" />

    <style name="VkCupTheme.BottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/shape_bottom_sheet</item>
    </style>

    <style name="VkCupTheme.BottomSheetDialog" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/VkCupTheme.BottomSheet</item>
        <item name="buttonStyle">@style/VkCupTheme.Button</item>
        <item name="editTextStyle">@style/VkCupTheme.EditText</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="VkCupTheme.Button" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/shape_button</item>
        <item name="android:textAllCaps">false</item>

        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="VkCupTheme.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:background">@drawable/shape_edit_text</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:paddingTop">7.5dp</item>
        <item name="android:paddingBottom">8.5dp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColorHint">@color/textEditHint</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="VkCupTheme.Toolbar.Collapsed" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="VkCupTheme.Final.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="VkCupTheme.Final.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="VkCupTheme.Final.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">false</item>
    </style>
</resources>
