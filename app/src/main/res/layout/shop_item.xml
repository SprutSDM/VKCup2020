<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="horizontal"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingTop="6dp"
    android:paddingBottom="6dp">

    <FrameLayout
        android:id="@+id/shop_img_wrapper"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:foreground="@drawable/shape_image_border_normal"
        android:padding="@dimen/group_image_border"
        android:layout_gravity="center_vertical">
        <ImageView
            android:id="@+id/shop_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shape_image"/>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="12dp">
        <TextView
            android:id="@+id/shop_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:textSize="16sp"
            android:fontFamily="sans-serif"
            android:textColor="@color/shopTitle"/>
        <TextView
            android:id="@+id/shop_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:fontFamily="sans-serif"
            android:textColor="@color/shopDescription"/>
    </LinearLayout>
</LinearLayout>
